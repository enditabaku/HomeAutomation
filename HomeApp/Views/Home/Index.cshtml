<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HomeApp</title>
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="jquery-3.5.1.min.js"></script>
    <script>
        $(function () {
            $('div').animate({ opacity: 1 });
            $("img-circle").mouseover(function () {
                $("img-circle").css("opacity", "0.3");
                $(this).css("opacity", "1");
            });
        });
    </script>

    <style>
        #imgc1:hover {
            opacity: 0.5;
        }

        #imgc2:hover {
            opacity: 0.5;
        }

        #imgc3:hover {
            opacity: 0.5;
        }

        #imgc4:hover {
            opacity: 0.5;
        }

        #imgc5:hover {
            opacity: 0.5;
        }
    </style>
</head>
<body style="background-color:black;">
    @if (TempData["testmsg"] != null)
    {
        <div class="alert alert-success">
            @TempData["testmsg"]
        </div>
    }
    <div class="container" style="opacity:0.1;">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Content/Images/lroom.jpg" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Living Room</h3>
                        <p>Together is our favorite place to be.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/kitchen.jpg" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Kitchen</h3>
                        <p>There is no sincere love than the love of food.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/bedroom.jpg" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>BedRoom</h3>
                        <p>When nothing goes right,go to sleep!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/bathroom.jpg" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>BathRoom</h3>
                        <p>Take a little time for yourself.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/studioroom.jpg" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Studio</h3>
                        <p>The helpful thought for which you look is written somewhere in a book.</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <br />
    <br />
    <div class="container2">
        <div class="row">
            <div class="col-md-2">
                <h3 style="margin-left:10px; font-family:'Eras ITC'">Living Room</h3>
                <a href="@Url.Action("LivingRoom")"> <img src="~/Content/Images/lroomlogo.jpg" id="imgc1" class="img-circle" width="180" height="160" /></a>
            </div>

            <div class="col-md-2">
                <h3 style="margin-left:40px; font-family:'Eras ITC'">Kitchen</h3>
                <a href="@Url.Action("Kitchen")"><img src="~/Content/Images/kitchenlogo.jpg" id="imgc2" class="img-circle" width="180" height="160" /></a>
            </div>

            <div class="col-md-2">
                <h3 style="margin-left:20px; font-family:'Eras ITC'">Bed Room</h3>
                <a href="@Url.Action("Bedroom")"><img src="~/Content/Images/bedroomlogo.jpg" id="imgc3" class="img-circle" width="180" height="160" /></a>
            </div>

            <div class="col-md-2">
                <h3 style="margin-left:20px; font-family:'Eras ITC'">Bath Room</h3>
                <a href="@Url.Action("Bathroom")"><img src="~/Content/Images/bathroomlogo.jpg" id="imgc4" class="img-circle" width="180" height="160" /></a>
            </div>

            <div class="col-md-2">
                <h3 style="margin-left:10px; font-family:'Eras ITC'">Studio Room</h3>
                <a href="@Url.Action("Studio")"><img src="~/Content/Images/studioroomlogo.jpg" id="imgc5" class="img-circle" width="180" height="160" /></a>
            </div>
        </div>
    </div>
</body>
</html>
