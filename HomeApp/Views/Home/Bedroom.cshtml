@{
    ViewBag.Title = "BedRoom";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/Content/LivingRoom.css" rel="stylesheet" />
    <script src="jquery-3.5.1.min.js"></script>
    <script>
        $(function () {
            $('div').animate({ opacity: 1 });
        });
    </script>
    <script>
        function change() {
            var text = document.getElementById('onoff');
            if(text.textContent.match("ON")){
                $("#onoff").text("OFF");
                $("#onoff").css("color", "coral");
            }
            else{
                $("#onoff").text("ON");
                $("#onoff").css("color", "green");
            };

        }
        function change2() {
            var text = document.getElementById('onoff2');
            if (text.textContent.match("ON")) {
                $("#onoff2").text("OFF");
                $("#onoff2").css("color", "coral");
            }
            else {
                $("#onoff2").text("ON");
                $("#onoff2").css("color", "green");
            };

        }

    </script>
</head>
<body style="background-image:url('../../Content/Images/bgbedroom.jpg');">

    <div class="grid-container1">

        <div>
            <img src="~/Content/Images/camera.jpg" class="img-circle" style="width:50px;height:50px; float:left; margin-top:30px; margin-left:10px;" />
            <br /> <br />
            <text style="font-family:'Eras ITC';font-size:70%; float:left; margin-left:10px;">Camera</text>
            <br /><br />

            <text id="onoff" onclick="change()" style="font-family:'Eras ITC';font-size:50%; color:coral; float:right; margin-right:10px; cursor:pointer;">OFF</text>
        </div>



        <div>
            <img src="~/Content/Images/air conditioner.png" class="img-circle" style="width:50px;height:50px; float:left; margin-top:30px; margin-left:10px;" />
            <br /> <br />
            <text style="font-family:'Eras ITC';font-size:70%; float:left; margin-left:10px;">Air Conditioner</text>
            <br /><br />

            <text id="onoff2" onclick="change2()" style="font-family:'Eras ITC';font-size:50%; color:coral; float:right; margin-right:10px; cursor:pointer;">OFF</text>
        </div>


    </div>


</body>
</html>
